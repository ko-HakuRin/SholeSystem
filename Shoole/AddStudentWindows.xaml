<Window x:Class="Shoole.AddStudentWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ADDTASKWINDOW" Height="450" Width="800">
    <Grid>
        <Image Source="Resources/TaskCatigoryWindowBackground.png"
               RenderOptions.BitmapScalingMode="HighQuality"
               Stretch="UniformToFill"/>
        <Border Background="#808080"
                CornerRadius="8"
              Width="240"
              Height="340">
            <Grid>
                <TextBox Text="Имя Студента"
                         Width="200" 
                         VerticalAlignment="Top"
                         Margin="0,72,0,0" />
                <TextBox Text="Пароль"
                         Width="200"
                         VerticalAlignment="Top"
                         Margin="0,100,0,0" />

                <StackPanel HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                            Width="200">
                    <Button Content="Добавить Студента"
                        Margin="0,144,0,0" />
                    <Button Content="ОТМЕНА"
                        Margin="0,8,0,0" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
